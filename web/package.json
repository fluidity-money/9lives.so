{
  "name": "web",
  "version": "0.1.0",
  "packageManager": "pnpm@9.10.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve@latest out",
    "lint:next": "next lint",
    "lint:tests": "eslint '__tests__/**/*.{ts,tsx}'  && eslint 'e2e/**/*.{ts,tsx}'",
    "codegen": "DOTENV_CONFIG_PATH=./.env.local graphql-codegen --config codegen.ts --require dotenv/config",
    "codegen:watch": "DOTENV_CONFIG_PATH=./.env.local graphql-codegen --config codegen.ts --watch --require dotenv/config",
    "clean": "cross-env NODE_V8_COVERAGE=.v8-coverage node ./scripts/clean.js",
    "test:start": "cross-env NODE_V8_COVERAGE=.v8-coverage NODE_OPTIONS=--inspect=9229 next dev",
    "test:command": "pnpm clean && pnpm test:start",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:fix": "prettier --fix 'src/**/*.{ts,tsx,js,jsx,json,css,md}'"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.3",
    "@headlessui/tailwindcss": "^0.2.1",
    "@sentry/nextjs": "^8.28.0",
    "@tanstack/react-query": "^5.53.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.0",
    "next": "14.2.7",
    "react": "^18",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.5.2",
    "thirdweb": "^5.50.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.4.1",
    "@playwright/test": "^1.46.1",
    "@tanstack/eslint-plugin-query": "^5.53.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/gtag.js": "^0.0.20",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.2",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "monocart-reporter": "^2.8.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
